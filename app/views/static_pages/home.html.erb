<% provide(:title, "Home") %>
<div class="row home-top">
  <div class="col-sm-6 home-left">
    <div class="row justify-content-center home-text">
      <div class="col-sm-8">
        Follow your interests.<br>
        Hear what people are talking about.<br>
        Join the conversation.
      </div>
    </div>
  </div>
  <div class="col-sm-6 home-right">
    <div class="row justify-content-center home-text">
      <div class="col-sm-8">
        <h3 >See what's happening in the world right now</h3>
        <p>Join Twitter today.</p>
        <div class="row">
          <div class="col-12">
            <%= link_to "Sign Up", "#", class: "btn" %>
          </div>
          <div class="col-12">
            <%= link_to "Login", "#", class: "btn" %>
          </div>
      </div>
    </div>
  </div>
</div>

<%= render 'home_footer' %>
